<Window x:Class="ProjectManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1300" ResizeMode="NoResize" KeyDown="Enter_KeyDown" Name="Main_Window">
    <Window.Background>
        <VisualBrush>
            <VisualBrush.Visual>
                <StackPanel>
                    <MediaElement Source="c:\users\andreas\source\repos\projectmanager\projectmanager\bgv.wmv" Height="auto" Width="auto" SpeedRatio="0.85" ></MediaElement>
                </StackPanel>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    <Grid>
        <Label Height="40" Width="250" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,220,0,0" Foreground="Gray">Username</Label>
        <TextBox x:Name="_textbox_Username" Height="40" Width="250" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,250,0,0" Background="Gray" BorderBrush="DimGray" BorderThickness="3"></TextBox>
        <Label Height="40" Width="250" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,320,0,0" Foreground="Gray">Password</Label>
        <PasswordBox x:Name="_passwordbox_Passwort" Height="40" Width="250" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,350,0,0" Background="Gray" BorderBrush="DimGray" BorderThickness="3"></PasswordBox>

    </Grid>
        
</Window>
